# CMO Agent Environment Variables
# Copy this file to .env and fill in your actual API keys

# GitHub API (required for discovery)
GITHUB_TOKEN=ghp_your_github_token_here

# Instantly API (required for email sending)
INSTANTLY_API_KEY=your_instantly_api_key_here

# Attio CRM (required for contact management)
ATTIO_API_KEY=your_attio_api_key_here
ATTIO_WORKSPACE_ID=your_attio_workspace_id_here

# Linear (required for issue tracking)
LINEAR_API_KEY=your_linear_api_key_here

# OpenAI (required for LangGraph agent)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Database configuration
# STATE_DB_URL=sqlite:///data/cmo_agent.db
# Or for PostgreSQL:
# STATE_DB_URL=postgresql://user:password@localhost/cmo_agent

# Optional: Blob storage
# BLOB_DIR=/var/lib/cmo_agent/artifacts

# Optional: Tracing
# LANGFUSE_PUBLIC_KEY=your_langfuse_key
# LANGFUSE_SECRET_KEY=your_langfuse_secret
