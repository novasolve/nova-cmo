# Copy to .env and fill in locally
# API Configuration
API_BASE_URL=http://localhost:8000
LOG_LEVEL=INFO
FORCE_TQDM=1

# GitHub API Token (required for repo searches)
GITHUB_TOKEN=your_github_token_here

# OpenAI API Key (required for AI agent)
OPENAI_API_KEY=your_openai_api_key_here

# Attio CRM (optional)
ATTIO_API_KEY=your_attio_api_key_here

# Database (optional, defaults to local files)
DATABASE_URL=sqlite:///./data/cmo_agent.db

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Rate Limiting
GITHUB_RATE_LIMIT_PER_HOUR=5000
OPENAI_RATE_LIMIT_RPM=3000

# Development
DEBUG=false
DRY_RUN=false
